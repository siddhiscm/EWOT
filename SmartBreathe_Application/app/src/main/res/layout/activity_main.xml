<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainrelativelayout"
    android:background="@color/background_color"
    tools:context="app.json.com.myjson.MainActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:id="@+id/mainlinearlayout"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome_siddhi"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="12dp"
            android:textStyle="normal"
            android:fontFamily="@font/times_new_roman"
            android:textColor="@color/text_color"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/times_new_roman"
            android:paddingBottom="12dp"
            android:paddingLeft="20dp"
            android:text="@string/you_have_100_mins_of_o2_remaining"
            android:textColor="@color/text_color"
            android:textSize="16sp"
            android:textStyle="normal" />
    </LinearLayout>

    <TableRow
        android:id="@+id/linTabHeader"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="86dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/txtDashboard"
            android:layout_width="112dp"
            android:layout_height="28dp"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:fontFamily="@font/times_new_roman"
            android:gravity="center"
            android:text="@string/dashboard"
            android:textColor="@color/text_color"
            android:textSize="18dp"
            android:textStyle="bold" />
        <View
            android:layout_width="0.1dp"
            android:layout_margin="4dp"
            android:background="#000000"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtProtocalInfo"
            android:text="@string/protocol_info"
            android:textStyle="bold"
            android:textColor="@color/text_color"
            android:textSize="18dp"
            android:fontFamily="@font/times_new_roman"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="3dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            />

        <View
            android:layout_width="0.1dp"
            android:layout_margin="4dp"
            android:background="#000000"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtAboutUs"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:text="@string/about_us"
            android:textStyle="bold"
            android:fontFamily="@font/times_new_roman"
            android:textColor="@color/text_color"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </TableRow>

    <LinearLayout
        android:id="@+id/relFrame"
        android:layout_below="@+id/linTabHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <FrameLayout

            android:id="@+id/frame_container"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_below="@+id/linTabHeader"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/smartbreath"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/smartbreathimg" />
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:background="@drawable/drawable_circle_dark_blue"
            android:indeterminate="false"
            android:max="100"
            android:progress="100"
            android:progressDrawable="@drawable/drawable_circle_grey"
            android:rotation="-90"
            android:secondaryProgress="100" />
        <TextView
            android:id="@+id/text_view_countdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="115dp"
            android:layout_centerHorizontal="true"
            android:text="10Sec"
            android:textAlignment="center"
            android:textSize="30sp"
            android:visibility="gone"/>

        <com.kofigyan.stateprogressbar.StateProgressBar
            android:id="@+id/your_state_progress_bar_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="103dp"
            app:spb_animateToCurrentProgressState="true"
            app:spb_checkStateCompleted="true"
            android:visibility="gone"
            app:spb_currentStateDescriptionColor="#000063"
            app:spb_currentStateNumber="one"
            app:spb_stateBackgroundColor="#696969"
            app:spb_stateDescriptionColor="#000063"
            app:spb_stateForegroundColor="#000063"
            app:spb_stateNumberBackgroundColor="#FFFFFF"
            app:spb_stateNumberForegroundColor="#FFFFFF" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/relBtn"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"
        android:gravity="center">

        <Button
            android:id="@+id/button_start_pause"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:layout_marginStart="15dp"
            android:background="@color/button_enable"
            android:text="@string/Start"
            android:visibility="gone"
            android:textColor="@color/background_color"
            android:textSize="16sp"
            android:textStyle="normal|bold" />

        <Button
            android:id="@+id/cancel"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="21dp"
            android:background="@color/button_disable"
            android:onClick="alert"
            android:enabled="false"
            android:text="@string/Cancel"
            android:textColor="@color/background_color"
            android:textSize="16sp"
            android:textStyle="normal|bold"
            tools:ignore="OnClick" />

    </RelativeLayout>

</RelativeLayout>
